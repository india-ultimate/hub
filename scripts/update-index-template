#!/usr/bin/env python

from pathlib import Path

from bs4 import BeautifulSoup

ROOT = Path(__file__).parent.parent

SOURCE = ROOT / "frontend/index.html"
OUTPUT = ROOT / "server/templates/index.html"


def make_static(name: str) -> str:
    return f"{{% static '{name.strip('/')}' %}}"


def main() -> None:
    with open(SOURCE) as f:
        soup = BeautifulSoup(f, features="html.parser")

    for link in soup.find_all("link"):
        href = link.attrs["href"]
        link.attrs["href"] = make_static(href)

    for link in soup.find_all("script"):
        src = link.attrs.get("src")
        if src and not link.attrs.get("external"):
            link.attrs["src"] = make_static(src)

    tool_path = Path(__file__).relative_to(ROOT)
    msg = f"<!-- Generated by {tool_path} -->\n"

    with open(OUTPUT, "w") as f:
        f.write("<!DOCTYPE html>\n")
        f.write(msg)
        f.write("{% load static %}\n")
        f.write("{% csrf_token %}\n")
        f.write(soup.prettify())

    print(f"Created {OUTPUT}")


if __name__ == "__main__":
    main()
