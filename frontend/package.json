{
  "scripts": {
    "dev": "yarn webpack serve --mode development --node-env development",
    "build-dev": "yarn webpack --mode development --node-env development",
    "build": "yarn webpack --mode production --node-env production"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@modular-forms/solid": "^0.19.0",
    "@solidjs/router": "^0.8.2",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "babel-preset-solid": "^1.7.7",
    "clsx": "^2.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.46.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-solid": "^0.12.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "flowbite": "^1.7.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "qrious": "^4.0.2",
    "raw-loader": "^4.0.2",
    "remark-gfm": "3.0.1",
    "slug": "^8.2.3",
    "solid-heroicons": "^3.2.4",
    "solid-hot-loader": "^0.0.5",
    "solid-js": "^1.7.7",
    "solid-markdown": "^1.2.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-manifest-plugin": "^5.0.0"
  },
  "dependencies": {
    "@tanstack/solid-query": "^4.33.0",
    "@thisbeyond/solid-dnd": "^0.7.4"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "arrowParens": "avoid",
    "plugins": [
      "./node_modules/prettier-plugin-tailwindcss/dist/index.mjs"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "plugins": [
      "solid",
      "unused-imports",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:solid/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        "error",
        "double"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "no-irregular-whitespace": [
        "error",
        {
          "skipJSXText": true
        }
      ],
      "unused-imports/no-unused-imports": "error",
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false,
          "varsIgnorePattern": "^_"
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "ignorePatterns": [
      "dist/*",
      "*.config.js"
    ]
  },
  "license": "AGPL-3.0-only"
}
